<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amadeusz.chef_cook" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.amadeusz.chef_cook.StartScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.amadeusz.chef_cook.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.DishActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.IngredientsActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.RecipeActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.DetailsActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.MultimediaActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.PhotoActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.RandomActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.PredictorActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.example.amadeusz.chef_cook.AboutAppActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
